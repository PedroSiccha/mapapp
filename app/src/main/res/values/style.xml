<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="customTextViewLabelRegistrationStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/dim_12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/dim_16dp</item>
        <item name="android:layout_marginTop">@dimen/dim_16dp</item>
    </style>

    <style name="customEditTextRegistrationStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">@dimen/dim_14dp</item>
        <item name="android:paddingEnd">@dimen/dim_16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_48dp</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:layout_marginStart">@dimen/dim_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_16dp</item>
        <item name="android:layout_marginTop">@dimen/dim_4dp</item>
        <item name="android:drawablePadding">@dimen/dim_10dp</item>
        <item name="android:paddingTop">@dimen/dim_14dp</item>
        <item name="android:paddingBottom">@dimen/dim_14dp</item>
        <item name="android:textSize">@dimen/dim_14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/dr_cursor</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Corner20p" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/colorPrimary2</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:height">54dp</item>
        <item name="android:width">200dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.App.Button.Assistant" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:height">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.App.Button.Large" parent="Widget.App.Button">
        <item name="android:width">200dp</item>
    </style>

    <style name="SpinnerTextStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_gravity">center</item>
    </style>

</resources>