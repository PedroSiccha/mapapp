<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo de la burbuja de diálogo -->
    <solid android:color="#FFFFFF" /> <!-- Cambia este color según tus necesidades -->

    <!-- Borde de la burbuja de diálogo -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Cambia este color según tus necesidades -->

    <!-- Esquinas redondeadas de la burbuja de diálogo -->
    <corners
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp" /> <!-- Cambia el radio según tus necesidades -->

    <!-- Sombras de la burbuja de diálogo -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Mismo color que el fondo -->
            <size android:width="16dp" android:height="8dp" /> <!-- Tamaño del triángulo -->
        </shape>
    </item>

</shape>
